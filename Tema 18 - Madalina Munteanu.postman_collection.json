		{
			"name": "/user/register.php",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const timestamp = Date.now();\r",
							"\r",
							"// Creează un email unic\r",
							"const uniqueEmail = `user${timestamp}@example.com`;\r",
							"const uniqueUsername = `user_${timestamp}`;\r",
							"\r",
							"// Salvează email-ul în variabila de mediu\r",
							"pm.environment.set(\"uniqueEmail\", uniqueEmail);\r",
							"pm.environment.set(\"uniqueUsername\", uniqueUsername);\r",
							"\r",
							"// Afișează în consola Postman (opțional)\r",
							"console.log(\"Email generat:\", uniqueEmail);\r",
							"console.log(\"Username:\", uniqueUsername);"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"const responseJson = pm.response.json();\r",
							"\r",
							"// Salvează confirmation_token și alte variabile utile\r",
							"pm.environment.set(\"confirmation_token\", responseJson.confirmation_token);\r",
							"pm.environment.set(\"apiKey\", responseJson.api_key);\r",
							"pm.environment.set(\"userId\", responseJson.user_id);\r",
							"pm.environment.set(\"username\", responseJson.username);\r",
							"\r",
							"// Debug\r",
							"console.log(\"Confirmation Token:\", responseJson.confirmation_token);\r",
							"console.log(\"API Key:\", responseJson.api_key);\r",
							"console.log(\"Username:\", responseJson.username);\r",
							"console.log(\"Unique Email:\", pm.environment.get(\"uniqueEmail\"));"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"email\": \"{{uniqueEmail}}\",\r\n  \"username\": \"{{uniqueUsername}}\",\r\n  \"password\": \"Accident2020!\",\r\n  \"first_name\": \"Madalina\",\r\n  \"last_name\": \"Munteanu\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
